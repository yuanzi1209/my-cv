* {
            box-sizing: border-box;
        }

        body {
            background: #efefef;
            margin: 20px auto;
        }

        p {
            margin: .3em 0;
        }

        h1 {
            font-size: 25px;
            margin-top: 0;
        }

        article {
            width: 21cm;
            min-height: 29.7cm;
            background: #fff;
            margin: 0 auto;
            overflow: auto;
            padding: 1em;
        }

        .myIntro {
            position: relative;
        }

        .myIntro img {
            position: absolute;
            top: 0;
            right: 0;
            object-fit: fill;
        }